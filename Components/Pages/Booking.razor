@page "/booking"
<br />
<br />

<div class="booking-container">
    <h1><strong>Booking Form</strong></h1>

    <h3>Fill in the details below:</h3>

    <EditForm Model="@booking" OnValidSubmit="HandleValidSubmit" FormName="bookingForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <table>
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><label for="name">Name:</label></td>
                    <td><InputText id="name" @bind-Value="@booking.Name" /></td>
                </tr>
                <tr>
                    <td><label for="date">Date:</label></td>
                    <td><InputDate id="date" @bind-Value="@booking.Date" /></td>
                </tr>
                <!-- Add more fields if necessary -->
            </tbody>
        </table>

        <button type="submit">Submit</button>
    </EditForm>

    <!-- Image below the form -->
    <br />
    <br />
    <div class="booking-image">
        <img src="images/BookingCalender.png" alt="Booking Calendar" />
    </div>

    <!-- Contact section -->
    <div class="contact-section">
        <h3>Contact Us:</h3>
        <p>Email: <a href="mailto:info@protozoo.com">info@protozoo.com</a></p>
        <p>Phone: (123) 456-7890</p>

        <h4>Follow us on Social Media:</h4>
        <a href="https://www.facebook.com" target="_blank">Facebook</a> |
        <a href="https://www.twitter.com" target="_blank">Twitter</a> |
        <a href="https://www.instagram.com" target="_blank">Instagram</a>
    </div>
</div>
