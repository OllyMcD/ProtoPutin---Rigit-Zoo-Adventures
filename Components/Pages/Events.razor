@page "/events"

@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager NavigationManager

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Events Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f9f9f9;
            margin: 0; /* Remove default margin */
        }

        .event-carousel {
            height: 100vh; /* Full viewport height */
            width: 100%; /* Full width */
        }

        .carousel-inner img {
            width: 100%;
            height: 100%; /* Stretch images to fill container */
            object-fit: cover; /* Maintain aspect ratio and cover area */
        }

        .carousel-caption {
            bottom: 20px; /* Adjust caption position */
        }

        .event-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px; /* Space between carousel and cards */
        }

        .event-card {
            text-align: center;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 10px;
            width: 100%; /* Responsive cards */
            max-width: 300px; /* Max width for larger screens */
        }

            .event-card img {
                width: 100%; /* Make images responsive */
                height: auto;
                border-radius: 5px;
            }
    </style>
</head>
<body>

    <div class="container-fluid">
        <h2>Upcoming Events</h2>

        <!-- Carousel -->
        <div id="eventCarousel" class="carousel slide event-carousel" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#eventCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#eventCarousel" data-slide-to="1"></li>
                <li data-target="#eventCarousel" data-slide-to="2"></li>
                <li data-target="#eventCarousel" data-slide-to="3"></li>
                <li data-target="#eventCarousel" data-slide-to="4"></li>
                <li data-target="#eventCarousel" data-slide-to="5"></li>
                <li data-target="#eventCarousel" data-slide-to="6"></li>
                <li data-target="#eventCarousel" data-slide-to="7"></li>
                <li data-target="#eventCarousel" data-slide-to="8"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="images/Wildlife-safari.webp" alt="Wildlife Safari">
                    <div class="carousel-caption">
                        <h3>Wildlife Safari</h3>
                        <p>Experience the thrill of a wildlife safari.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Animal-feeding.jpg" alt="Animal Feeding">
                    <div class="carousel-caption">
                        <h3>Animal Feeding</h3>
                        <p>Get up close and personal with our animals during feeding time.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Nature-walk.jpg" alt="Nature Walk">
                    <div class="carousel-caption">
                        <h3>Nature Walk</h3>
                        <p>Join us for a guided nature walk through the park.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/School-trip.jpg" alt="School Trip">
                    <div class="carousel-caption">
                        <h3>School Trip</h3>
                        <p>A special day for students to explore wildlife.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Workshop.jpg" alt="Wildlife Workshop">
                    <div class="carousel-caption">
                        <h3>Wildlife Workshop</h3>
                        <p>Hands-on activities for wildlife enthusiasts.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Family-day.jpg" alt="Family Day">
                    <div class="carousel-caption">
                        <h3>Family Day</h3>
                        <p>Fun activities for families at the zoo!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Photography.jpg" alt="Photography Tour">
                    <div class="carousel-caption">
                        <h3>Photography Tour</h3>
                        <p>Capture stunning wildlife moments with our guides.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Special-events.jpg" alt="Special Event">
                    <div class="carousel-caption">
                        <h3>Special Event</h3>
                        <p>Join us for a special evening at the zoo.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="images/Conservation.jpg" alt="Conservation Day">
                    <div class="carousel-caption">
                        <h3>Conservation Day</h3>
                        <p>Learn about conservation efforts and how you can help.</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#eventCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#eventCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Event Cards -->
        <div class="event-grid">
            <div class="event-card col-xs-12 col-sm-4">
                <img src="images/Community-Day.jpg" alt="Community Day">
                <h3>Community Day</h3>
                <p>Join us for a day of fun and learning with local wildlife.</p>
            </div>
            <div class="event-card col-xs-12 col-sm-4">
                <img src="images/Zoo-Education.jpg" alt="Zoo Education">
                <h3>Zoo Education</h3>
                <p>Educational sessions about wildlife conservation.</p>
            </div>
            <div class="event-card col-xs-12 col-sm-4">
                <img src="images/Fun-Fair.jpg" alt="Fun Fair">
                <h3>Fun Fair</h3>
                <p>Enjoy games, food, and entertainment for the whole family.</p>
            </div>
        </div>
    </div>

</body>
</html>
