@page "/visitor-info"

<!-- Global styles -->
<link href="css/styles.css" rel="stylesheet" />
<link href="css/visitor-info.css" rel="stylesheet" />

<!-- Hero Section -->

<br /><br /><br /> <br /> <!--expert coding-->

<section class="hero visitor-info-hero">
    <div class="hero-content">
        <h1>Visitor Information</h1>
        <p>Plan your visit with ease and discover all the wonders we offer!</p>
    </div>
</section>

<!-- Fun Facts Section -->
<section class="fun-facts">
    <h2>Fun Facts About Our Zoo</h2>
    <div class="fact-container">
        <div class="fact">
            <h3>Over 500 Animals!</h3>
            <p>We are home to a diverse range of species from all around the world.</p>
        </div>
        <div class="fact">
            <h3>Interactive Exhibits</h3>
            <p>Get up close and personal with our animals in special interactive zones.</p>
        </div>
        <div class="fact">
            <h3>Educational Programs</h3>
            <p>Join our programs to learn more about wildlife conservation.</p>
        </div>
    </div>
</section>

<!-- Visitor Amenities Section -->
<section class="amenities">
    <h2>Visitor Amenities</h2>
    <div class="amenity-container">
        <div class="amenity">
            <h3>Cafes & Restaurants</h3>
            <p>Enjoy a delicious meal or snack during your visit!</p>
        </div>
        <div class="amenity">
            <h3>Gift Shop</h3>
            <p>Take home a memento from your visit.</p>
        </div>
        <div class="amenity">
            <h3>Rest Areas</h3>
            <p>Relax and recharge in our comfortable rest areas.</p>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="zoo-map">
    <h2>Zoo Map</h2>
    <iframe src="" title="Interactive Zoo Map" width="500" height="500" style="border: none;"></iframe>
</section>

<!-- Visitor Guidelines Section -->
<section class="guidelines">
    <h2>Visitor Guidelines</h2>
    <ul>
        <li>Stay with your group and follow the designated paths.</li>
        <li>Do not feed the animals.</li>
        <li>Keep noise to a minimum to avoid disturbing the animals.</li>
        <li>Follow all posted signs and instructions from staff.</li>
    </ul>
</section>

<!-- Contact Information Section -->
<section class="contact-info">
    <h2>Contact Us</h2>
    <p>If you have any questions, feel free to reach out:</p>
    <p>Phone: (123) 456-7890</p>
    <p>Email: info@rigitzoo.com</p>
</section>

